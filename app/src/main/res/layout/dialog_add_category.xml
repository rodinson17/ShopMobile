<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_border_radius_white">

    <TextView
        android:id="@+id/tv_titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:gravity="center"
        android:padding="10dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_name_category"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_titel"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_name_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name Category"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/til_name_category"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelGenericDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_top_dialog"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_mayus" />

        <Button
            android:id="@+id/btnOkGenericDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_top_button_dialog"
            android:text="Ok"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_mayus" />
    </LinearLayout>
</RelativeLayout>