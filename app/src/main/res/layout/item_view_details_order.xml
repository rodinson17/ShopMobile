<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/border_top_button_dialog"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name_product_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_minus"
        android:text="sdfhhsdfhj"
        android:layout_weight="1.5"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_remove_item"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@mipmap/ic_remove"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_quantity_product_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="199"
            android:textColor="@color/black"
            android:textSize="@dimen/text_minus"/>

        <ImageView
            android:id="@+id/iv_add_item"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@mipmap/ic_add"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_price_product_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="fdfh"
        android:textColor="@color/black"
        android:textSize="@dimen/text_minus"
        android:paddingRight="20dp"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:src="@mipmap/ic_edit"/>
</LinearLayout>